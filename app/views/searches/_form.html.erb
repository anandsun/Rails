<%= form_for @search, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :keywords, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :keywords, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :options, :class => 'control-label' %>
    <div class="controls">
      <%= check_box_tag(:searchTopic) %>
      <%= label_tag(:searchTopic, "Search topic names") %>
      <%= check_box_tag(:searchMessage) %>
      <%= label_tag(:searchMessage, "Search message text") %>
      <%= check_box_tag(:searchUser) %>
      <%= label_tag(:searchUser, "Search user names") %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                searches_path, :class => 'btn' %>
  </div>
<% end %>
