<!DOCTYPE html>
<html>
<head>
  <title>Dark</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class = "container">
    <table class = "center">
      <tr>
	<td>
	  <div class = "thin center well">
	    <h2 class = "cling">DARK</h2>
	    <%= image_tag "dark.jpg" %>
	    <h4>A forum for the discussion of nonexistent things</h4>
	  </div>
	</td>
	<td>
	  <div class = "btn-group btn-group-vertical">
	    <%= button_to "Discussions", 
		'/', 
		:class => 'btn btn-primary' %>
	    
	    <% if user_signed_in? %>
	    <%= button_to 'New Discussion',
		new_discussion_path,
		:method => :get,
		:class => 'btn btn-success' %>

	    <%= button_to 'Edit Account',
		edit_user_registration_path,
		:method => :get,
		:class => 'btn btn-info' %>
	    
	    <%= button_to 'Sign Out',
		destroy_user_session_path,
		method: :delete,
		:class => 'btn btn-danger' %>
	    
	    <% else %>
	    <%= button_to 'Sign In',
		new_user_session_path,
		:method => :get,
		:class => 'btn btn-info' %>

	    <%= button_to 'Sign Up',
		new_user_registration_path,
		:method => :get,
		:class => 'btn btn-success' %>

	    <% end %>   
	  </div>
	</td>
      </tr>
      <tr>
      </tr>
    </table>

    <table class = "center">
      <tr>
	<td>
	  <% if alert%>
	  <div class="alert alert-error">
	    <%=alert%>
	  </div>
	  <% end %>
	  
	  <% if notice %>
	  <div class="alert alert-info">
	    <%=notice%>
	  </div>
	  <% end %>
	</td>
      </tr>
    </table>

    <%= yield %>
    
  </div>
</body>
</html>
