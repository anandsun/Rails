<%- model_class = Discussion -%>

<table class = "center">
  <tr>
    <td>
      <div class="page-header">
	<h1><%=t '.title', :default => @discussion.topic %></h1>
      </div>
      
      <div class = "hero-unit">
	<p class = "lead">
	  <%= @discussion.message %>
	</p>
	
	<dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
	  <dd><%= @discussion.user.name %></dd>
	</dl>
      </div>
      
      <% @discussion.posts.each do |post| %>
      <div class = "well">
	<p class = "lead">
	<%= post.message %>
	</p>
	<dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
	  <% if post.user %>
	  <dd>
	    <%= post.user.name %>
	  </dd>
	  <% end %>
	</dl>

      </div>
      <% end %>
     
      <div class = "form-actions">
	<table class = "center">
	  <tr>
	    <td>
	      <%= button_to "Back", recent_discussions_path, :method => :get, :class => 'btn'  %>
	    </td>
	    <td>
	      <%= button_to "New Post", new_discussion_post_path(@discussion), :method => :get, :class => 'btn btn-primary' %>
	    </td>
	  </tr>
	</table>
      </div>
    </td>
  </tr>
</table>
